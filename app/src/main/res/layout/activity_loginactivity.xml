<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="368dp"
        android:layout_height="551dp"
        android:background="@drawable/irreeb"
        tools:context="info.isom.irrreebe.loginactivity"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">
    <include
        android:id="@+id/main_page_TopBar"
        layout="@layout/app_bar_layout" />

        <EditText
            android:id="@+id/EmailLoginButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/Sign_in_login_button"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="143dp"
            android:background="@color/common_google_signin_btn_text_dark_disabled"
            android:backgroundTintMode="screen"
            android:ems="10"
            android:hint="enter your email"
            android:inputType="textEmailAddress"
            android:padding="15dp"
            android:textColor="@android:color/white" />

        <EditText
            android:id="@+id/Password_login_batton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/EmailLoginButton"
            android:layout_marginTop="58dp"
            android:background="@color/colorAccent"
            android:backgroundTint="@color/common_google_signin_btn_text_light_disabled"
            android:backgroundTintMode="src_in"
            android:ems="10"
            android:hint="password"
            android:inputType="textPassword"
            android:padding="15dp"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/Sign_in_login_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="15dp"
            android:text="login"
            android:layout_marginBottom="89dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>




